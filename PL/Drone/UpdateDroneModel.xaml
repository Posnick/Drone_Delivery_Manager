        <Button Content="Close" HorizontalAlignment="Left" Margin="647,25,0,0" VerticalAlignment="Top" Width="102" Foreground="#FFF60C0C" Cursor="Hand" Click="Close_Click" Height="30"/>

        <TextBox Name ="ModelTextBox" HorizontalAlignment="Left" Margin="318,61,0,0" Text="Enter Model" TextWrapping="NoWrap" VerticalAlignment="Top" Width="168" GotFocus="ModelTextBox_GotFocus" LostFocus="ModelTextBox_LostFocus" Cursor="Hand" PreviewTextInput="ModelIdTextBox_PreviewTextInput" KeyDown="ModelTextBox_KeyDown" Height="17"/>

        <Button Name="UpdateButton"  Content="Update Model" HorizontalAlignment="Center" Margin="0,145,0,0" VerticalAlignment="Top" Click="UpdateDroneModelButton_Click" Cursor="Hand" Height="31" Width="100" RenderTransformOrigin="0.685,-1.976"/>

    </Grid>
</Window>
