<Window x:Class="PL.MainAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainAdminWindow" Height="450" Width="800" Closing="Window_Closing">
    <Window.Background>
        <ImageBrush ImageSource="resources/DroneInDelivery1.jpg" Stretch="Fill" />
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="CloseButton" Content="Close"  HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10,0,10,0" Foreground="#FFF60C0C" Click="Close_Click" Height="41" Width="125" FontWeight="Normal" Cursor="Hand" Margin="634,55,0,0" BorderBrush="#FF0F0F0E" Grid.RowSpan="2"/>
        <Button Name="ViewDroneList" Content="View Drone List"  HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10,0,10,0" Click="ViewDroneList_Click" Height="41" Width="125" FontWeight="Normal" Cursor="Hand" Margin="634,105,0,0" BorderBrush="#FF0F0F0E" Grid.RowSpan="2"/>
        <Button Name="ViewStationList" Content="View Station List"  HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10,0,10,0" Height="41" Width="125" FontWeight="Normal" Cursor="Hand" Margin="634,155,0,0" Click="ViewStationList_Click" BorderBrush="#FF0F0F0E" Grid.RowSpan="2"/>
        <Button Name="ViewCustomerList" Content="View Customer List"  HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10,0,10,0" Height="41" Width="125" FontWeight="Normal" Cursor="Hand" Margin="634,205,0,0" Click="ViewCustomerList_Click" BorderBrush="#FF0F0F0E" FontFamily="Arial" Grid.RowSpan="2"/>
        <Button Name="ViewParcelList" Content="View Parcle List"  HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10,0,10,0" Height="41" Width="125" FontWeight="Normal" Cursor="Hand" Margin="634,255,0,0" Click="ViewParcelList_Click" BorderBrush="#FF0F0F0E" Grid.RowSpan="2"/>
    </Grid>
</Window>
